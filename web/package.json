{
  "name": "restaurant-web",
  "version": "1.0.0",
  "private": true,
  "description": "Simply mexican restaurant website",
  "scripts": {
    "prepare": "is-ci || node ./tools/inject-boot.mjs",
    "dev": "live-server --port=8080 --entry-file=/index.html --watch=public",
    "start": "node ./tools/inject-boot.mjs && serve -s . -l ${PORT:-3000}",
    "deploy": "railway up",
    "deploy:cloudflare": "pnpm dlx wrangler deploy"
  },
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "is-ci": "^4.1.0",
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "pnpm@10.17.0"
}